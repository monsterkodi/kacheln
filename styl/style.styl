fill-abs()
    position            absolute
    bottom              0
    right               0
    left                0
    top                 0

*
    outline-width       0
    
body
    fill-abs()
    font-family          titlebarFont
    font-size            15px
    margin               0
    overflow             hidden
    -webkit-user-select  none
    
