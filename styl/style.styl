.kachel
    position            relative
    pointer-events      all
    &.Appl
        display         inline-grid
        max-width       50%
    &.Volume
        display         inline-grid
        width           32%
    &.Battery
        display         inline-grid
        width           32%
    &.Cores
        display         inline-grid
        width           33%
            
